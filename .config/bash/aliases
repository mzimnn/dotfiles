# -*- mode: sh; -*-

alias_if_supported () {
    if $2 >/dev/null 2>&1
    then
        alias "$1"="$2"
    fi
}

alias ..='cd ..'
alias ...='cd ../..'
alias diff='diff --color=auto'
alias g='git'
alias grep='grep --color=auto'
alias ip='ip -color=auto'
alias la='ls -lA'
alias led='ledger'
alias ll='ls -l'
alias ls='LC_COLLATE=C ls --color=auto --group-directories-first -h'
alias mkdir='mkdir -p -v'
alias pacman='pacman --color=auto'
alias sudo='sudo '
alias watch='watch '

# -m is not supported by macOS' cal
alias_if_supported 'cal' 'cal -m'

# Enable bash completion for alias
if is_installed __git_complete && is_installed __git_main
then
    __git_complete g __git_main
fi

# vim:filetype=sh
