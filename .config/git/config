[alias]
	aliases = !git config --list | grep '^alias' | sort
	amend = commit --amend
	append = commit --amend --no-edit
	authors = shortlog --summary --numbered --email
	b = branch
	cm = commit
	co = checkout
	cr = check-repos
	d = diff
	diff-upstream = diff HEAD@{upstream} HEAD
	ds = diff --staged
	f = fetch -v
	j = jump
	l = log
	last = log -1 HEAD
	r = rebase
	s = status
	sh = show
	sw = switch
	tree = log --oneline --graph

	# un-/hide files locally
	hide = update-index --skip-worktree
	hide-all = !git status --porcelain | grep '^ M' | cut -c4- | xargs git hide
	ls-hidden = !git ls-files -v | grep '^S' | cut -c3-
	unhide = update-index --no-skip-worktree
	unhide-all = !git ls-hidden | xargs git unhide
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	verbose = true
[diff]
	colorMoved = true
	colorMovedWS = allow-indentation-change
	wsErrorHighlight = all
[diff-so-fancy]
	first-run = false
	markEmptyLines = false
	stripLeadingSymbols = false
[fetch]
	prune = true
[grep]
	lineNumber = true
[include]
	path = ~/.config/git/config.local
[init]
	defaultBranch = master
[merge]
	autoStash = true
	conflictStyle = zdiff3
[pull]
	ff = only
[rebase]
	abbreviateCommands = true
	autoStash = true
[stash]
	showIncludeUntracked = true
	showPatch = true
[status]
	showStash = true
